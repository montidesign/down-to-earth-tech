---
import Layout from '../layouts/Layout.astro';
import HeroBanner from '../components/HeroBanner.astro';
import Footer from '../components/Footer.astro';
import VideoBackground from '../components/VideoBackground.astro';
import Cog6Tooth from 'astro-heroicons/solid/Cog6Tooth.astro';
import Lifebuoy from 'astro-heroicons/solid/Lifebuoy.astro';
import ArrowPath from 'astro-heroicons/solid/ArrowPath.astro';

const seoTitle = "Local IT Consulting - Down To Earth Technology | Waco, TX";
const seoDescription = "Local IT consulting in Waco, TX. Managed IT services, Lenovo/Dell/HP servers, computer network support, and business surveillance systems. Keeping your business running on solid ground since 2014.";

const homeSchema = [
  {
    "@type": "WebPage",
    "@id": "https://downtoearthtech.net/#webpage",
    "url": "https://downtoearthtech.net/",
    "name": seoTitle,
    "isPartOf": { "@id": "https://downtoearthtech.net/#website" },
    "about": { "@id": "https://downtoearthtech.net/#LocalBusiness" },
    "description": seoDescription,
    "inLanguage": "en-US"
  },
  {
    "@type": "Service",
    "name": "IT Consulting Services",
    "provider": { "@id": "https://downtoearthtech.net/#LocalBusiness" },
    "serviceType": ["Managed IT Services", "Server Installation", "Network Support", "Business Surveillance"],
    "areaServed": {
      "@type": "State",
      "name": "Central Texas"
    }
  }
];
